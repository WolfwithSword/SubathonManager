<UserControl x:Class="SubathonManager.UI.Views.EventListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:SubathonManager.UI.Converters"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" Background="Transparent"
             d:DesignHeight="500" d:DesignWidth="500">
    <UserControl.Resources>
        <conv:BoolToProcessedTextConverter x:Key="BoolToProcessedTextConverter"/>
        <conv:BoolToProcessedColorConverter x:Key="BoolToProcessedColorConverter"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <conv:CommandDeletableToBoolVisibilityConverter x:Key="CommandDeletableToBoolVisibilityConverter"/>
        <conv:EventTypeValueConverter x:Key="EventTypeValueConverter"/>
        <conv:IsNotMetaCommandConverter x:Key="IsNotMetaCommandConverter"/>
        <conv:GreaterThanOneToVisibilityConverter x:Key="GreaterThanOneToVisibilityConverter"/>
        <conv:GreaterThanZeroToVisibilityConverter x:Key="GreaterThanZeroToVisibilityConverter"/>
        <Style x:Key="NoHoverOverlayButton" TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
            <Setter Property="Background" Value="{DynamicResource SolidOverlayButtonColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SolidOverlayButtonBorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ui:Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                            
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SolidOverlayButtonHoverColor}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource SolidOverlayButtonHoverColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SolidOverlayButtonPressedColor}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource SolidOverlayButtonPressedColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="OpaqueSecondaryButton" TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
            <Setter Property="Appearance" Value="Secondary"/>
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="Background" Value="{DynamicResource OpaqueSecondaryBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource OpaqueSecondaryBackgroundBorder}"/>
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ui:Button">
                        <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource OpaqueSecondaryBackgroundHover}"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="{DynamicResource OpaqueSecondaryBackgroundHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource OpaqueSecondaryBackgroundPressed}"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="{DynamicResource OpaqueSecondaryBackgroundPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid MaxHeight="550">
        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="532" Width="480">
            <ItemsControl x:Name="EventListPanel">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" Margin="8"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="10" BorderBrush="#333" BorderThickness="1"
                                Padding="10" Margin="4,6" Background="{DynamicResource AppHeaderBackground}">
                            <Grid>
                                <Grid.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="HoverButtons"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="1" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="HoverButtons"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Grid.Triggers>
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Vertical">
                                    <Grid>
                                        <TextBlock Text="{Binding Source}"
                                                   HorizontalAlignment="Left"
                                                   FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding EventTimestamp, StringFormat='{}{0:G}'}" 
                                                   HorizontalAlignment="Right" Foreground="{DynamicResource TextFillColorPrimaryBrushSoft}"
                                                   FontSize="12"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding EventType}" FontSize="14" Foreground="{DynamicResource TextFillColorPrimaryBrushSoft}"
                                                   HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding ProcessedToSubathon, Converter={StaticResource BoolToProcessedTextConverter}}"
                                                   Foreground="{Binding ProcessedToSubathon, Converter={StaticResource BoolToProcessedColorConverter}}"
                                                   FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14"
                                                   Margin="0,4,0,0"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="220"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                            <TextBlock Text="{Binding User, StringFormat={}User: {0}}" Margin=" 0 0 4 0" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,3,0,0">
                                            <TextBlock Margin="4 0">
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource EventTypeValueConverter}">
                                                        <Binding Path="Value"/>
                                                        <Binding Path="EventType"/>
                                                        <Binding Path="Currency"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                    <Grid 
                                        Visibility="{Binding Command, Converter={StaticResource IsNotMetaCommandConverter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="140"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                            <TextBlock Text = "Values: "/>
                                            <TextBlock Text="{Binding SecondsValue, StringFormat={}{0}s}"
                                                       Visibility="{Binding SecondsValue, Converter={StaticResource GreaterThanZeroToVisibilityConverter}}"/>
                                            <TextBlock Text="{Binding MultiplierSeconds, StringFormat={} x{0}\ \ \ \ }"
                                                       Visibility="{Binding SecondsValue, Converter={StaticResource GreaterThanZeroToVisibilityConverter}}"/>
                                            <TextBlock Text="{Binding PointsValue, StringFormat={}{0}pts}" 
                                                       Visibility="{Binding PointsValue, Converter={StaticResource GreaterThanZeroToVisibilityConverter}}"/>
                                            <TextBlock Text="{Binding MultiplierPoints, StringFormat={} x{0}}"
                                                       Visibility="{Binding PointsValue, Converter={StaticResource GreaterThanZeroToVisibilityConverter}}"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,2,0,0">
                                            <TextBlock Text="{Binding Amount, StringFormat={}x{0}}" 
                                                       Visibility="{Binding Amount, Converter={StaticResource GreaterThanOneToVisibilityConverter}}"
                                                       Margin="0 0 0 0" />
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal"
                                            VerticalAlignment="Top" Opacity="0"
                                            HorizontalAlignment="Right"
                                            Panel.ZIndex="100"
                                            x:Name="HoverButtons"
                                            Margin="8,0,0,0">
                                    <ui:Button x:Name="ReprocessBtn"
                                            Width="32" Height="32" Margin="4,0" Padding="2"
                                            Style="{StaticResource OpaqueSecondaryButton}"
                                            Visibility="{Binding ProcessedToSubathon, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                            Click="ReprocessBtn_Click">
                                        <ui:SymbolIcon Symbol="Recycle20" />
                                    </ui:Button>
                                    <ui:Button x:Name="DeleteBtn" ToolTip="Delete" Click="DeleteBtn_Click" Padding="2" Appearance="Danger" 
                                               Visibility="{Binding Command, Converter={StaticResource CommandDeletableToBoolVisibilityConverter}}"
                                                Width="32" Height="32" Margin="4,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                                        <ui:SymbolIcon Symbol="Delete24" />
                                    </ui:Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

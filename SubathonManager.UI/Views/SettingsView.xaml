                                        <!--     <ui:TextBox Width="100" PreviewTextInput="NumberOnly_PreviewTextInput"  -->
                                        <!--              " x:Name="SubPrimeTextBox"/> -->
                                        <!-- </StackPanel> -->
                                    </StackPanel>
                                </Expander>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    
                    <!-- YouTube --> 
                    <Expander Header="YouTube" IsExpanded="False">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">

<UserControl x:Class="SubathonManager.UI.Views.GoalsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:SubathonManager.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">

    <Grid Height="300" MaxHeight="300">
        <ScrollViewer x:Name="Scroller" 
                      VerticalScrollBarVisibility="Auto" 
                      MaxHeight="300" Height="300" Width="600" 
                      Padding="4" HorizontalAlignment="Right"
                      Margin="4 8 16 4">

            <ItemsControl x:Name="GoalsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:Card Margin="0,0,8,10" Padding="12">
                            <StackPanel>
                                <TextBlock Text="{Binding Text}"
                                           FontWeight="SemiBold"
                                           TextWrapping="Wrap"
                                           FontSize="16"
                                           TextTrimming="CharacterEllipsis"
                                           Opacity="{Binding OpacityValue}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource TextColorBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Completed}" Value="True">
                                                    <Setter Property="Foreground" Value="{DynamicResource CompletedTextColorBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBlock Text="{Binding PointsText}"
                                           FontSize="14"
                                           TextDecorations="{Binding PointsDecoration}"
                                           Margin="0,4,0,0"
                                           Opacity="{Binding OpacityValue}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource PointsColorBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Completed}" Value="True">
                                                    <Setter Property="Foreground" Value="{DynamicResource CompletedPointsColorBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </ui:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

<UserControl x:Class="SubathonManager.UI.Views.SettingsViews.PicartoSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SubathonManager.UI.Views.SettingsViews"
             xmlns:validation="clr-namespace:SubathonManager.UI.Validation"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
<Expander Header="Picarto" IsExpanded="False">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 6">
            <ui:Button x:Name="ConnectPicartoBtn"
                       Content="Connect"
                       Width="120" VerticalAlignment="Center"
                       Height="35"
                       Margin="0,5,0,10"
                       Click="ConnectPicartoButton_Click"/>
            <ui:TextBox x:Name="PicartoUserBox" PlaceholderText="ChannelName"
                        VerticalAlignment="Center" FontSize="12" Width="250" Margin="14 5 12 10"/>
            <TextBlock Text="Chat: " VerticalAlignment="Center" FontSize="12" Margin="14 0 0 0"/>
            <TextBlock x:Name="PicartoChatStatusText" Text="Disconnected" VerticalAlignment="Center" FontSize="12" Margin="2 0 14 0"/>
            <TextBlock Text="Alerts: " VerticalAlignment="Center" FontSize="12" Margin="14 0 0 0"/>
            <TextBlock x:Name="PicartoClientStatusText" Text="Disconnected" VerticalAlignment="Center" FontSize="12" Margin="2 0 0 0"/>
        </StackPanel>
        
        <StackPanel Margin="10,5,0,5">
            
            <!-- Kudos -->
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Kudos:" Width="150" VerticalAlignment="Center"/>
                    <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True"
                                x:Name="KudosTextBox" PlaceholderText="12"/>
                    <TextBlock Margin="8 0 0 0" Text="Seconds per 100" Width="150" VerticalAlignment="Center"/>
                    
                    <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True"
                                x:Name="Kudos2TextBox" PlaceholderText="0"/>
                    <TextBlock Margin="8 0 0 0"  Text="Points per 100, rounded down" Width="150" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <ui:TextBox Margin="10 0 4 0" Width="80" Text="100"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                PlaceholderText="100"
                                Height="30"
                                FontSize="12"
                                validation:InputValidationBehavior.IsNumberOnly="True" x:Name="SimulateTipAmt"/>
                    <ui:Button Icon="Add24" Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               Content="Test"
                               Click="TestPicartoTip_Click"
                               Width="60" Padding="2"
                               Height="30"
                               Margin="4,0,0,0"></ui:Button>
                </StackPanel>
            </Grid>
            
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Follows:" Width="150" VerticalAlignment="Center"/>
                    <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="0"
                                x:Name="FollowTextBox"/>
                    <TextBlock Margin="8 0 0 0" Text="Seconds" Width="150" VerticalAlignment="Center"/>
                    <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="0"
                                x:Name="Follow2TextBox"/>
                    <TextBlock Margin="8 0 0 0"  Text="Points" Width="150" VerticalAlignment="Center"/>
                </StackPanel>
                                                        
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <ui:Button Icon="Add24" Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               Content="Test"
                               Click="TestPicartoFollow_Click"
                               Width="60" Padding="2"
                               Height="30"
                               Margin="4,0,0,0"></ui:Button>
                </StackPanel>
            </Grid>
            
            <!-- Subs -->
            <Expander Header="Subs" IsExpanded="True" Margin="0,5,0,0">
                <StackPanel Margin="10,5,0,5">
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="T1 Sub:" Width="100" VerticalAlignment="Center"/>
                            <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="60"
                                        x:Name="SubT1TextBox"/>
                            <TextBlock Margin="8 0 0 0" Text="Seconds" Width="120" VerticalAlignment="Center"/>
                            <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="1"
                                        x:Name="SubT1TextBox2"/>
                            <TextBlock Margin="8 0 0 0"  Text="Points" Width="100" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation = "Horizontal" HorizontalAlignment="Right">
                            <ComboBox Text="Tier" Width="120" 
                                      x:Name="SimSubTierSelection"
                                      SelectedIndex="0" Margin="4 0 4 0">
                                <ComboBoxItem Content="Tier 1"/>
                                <ComboBoxItem Content="Tier 2"/>
                                <ComboBoxItem Content="Tier 3"/>
                            </ComboBox>
                            <ui:Button Icon="Add24" Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                       Content="Test"
                                       Click="TestPicartoSub_Click"
                                       Width="60" Padding="2"
                                       Height="35"
                                       Margin="4,0,0,0"></ui:Button>
                        </StackPanel>
                    </Grid>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="T2 Sub:" Width="100" VerticalAlignment="Center"/>
                            <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="120"
                                        x:Name="SubT2TextBox"/>
                            <TextBlock Margin="8 0 0 0" Text="Seconds" Width="120" VerticalAlignment="Center"/>
                            <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="2"
                                        x:Name="SubT2TextBox2"/>
                            <TextBlock Margin="8 0 0 0"  Text="Points" Width="100" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1"  Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 8 0 0">
                            <ComboBox Text="Months" Width="120"  Height="35"
                                      x:Name="SimSubMonthSelection"
                                      SelectedIndex="0" Margin="4 0 4 0">
                                <ComboBoxItem Content="1 Month"/>
                                <ComboBoxItem Content="3 Months"/>
                                <ComboBoxItem Content="6 Months"/>
                                <ComboBoxItem Content="12 Months"/>
                            </ComboBox>
                            <ui:Button Icon="Add24" Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                       Content="Test"
                                       Click="TestPicartoSubMonths_Click"
                                       Width="60" Padding="2"
                                       Height="35"
                                       Margin="4,0,0,0"></ui:Button>
                        </StackPanel>
                    </Grid>
                    
                    
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="T3 Sub:" Width="100" VerticalAlignment="Center"/>
                        <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="180"
                                    x:Name="SubT3TextBox"/>
                        <TextBlock Margin="8 0 0 0" Text="Seconds" Width="120" VerticalAlignment="Center"/>
                        <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="3"
                                    x:Name="SubT3TextBox2"/>
                        <TextBlock Margin="8 0 0 0"  Text="Points" Width="100" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Separator Margin="0,8"/>
                    
                    <!-- gift --> 
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>
                      <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="GiftSub:" Width="100" VerticalAlignment="Center"/>
                            <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="60"
                                        x:Name="GiftSubTextBox"/>
                            <TextBlock Margin="8 0 0 0" Text="Seconds" Width="120" VerticalAlignment="Center"/>
                            <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="1"
                                        x:Name="GiftSubTextBox2"/>
                            <TextBlock Margin="8 0 0 0"  Text="Points" Width="100" VerticalAlignment="Center"/>
                        </StackPanel>
                                                                     
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <ui:TextBox Width="100" validation:InputValidationBehavior.IsNumberOnly="True"
                                        Text="1" PlaceholderText="1" Height="35" FontSize="14" Margin="0 0 4 0"
                                        x:Name="SimGiftSubAmtInput"/>
                            <ComboBox Text="Months" Width="120" 
                                      x:Name="SimGiftSubMonthSelection" Height="35"
                                      SelectedIndex="0" Margin="4 0 4 0">
                                <ComboBoxItem Content="1 Month"/>
                                <ComboBoxItem Content="3 Months"/>
                                <ComboBoxItem Content="6 Months"/>
                                <ComboBoxItem Content="12 Months"/>
                            </ComboBox>
                            <ui:Button Icon="Add24" Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                       Content="Test"
                                       Click="TestPicartoGiftSub_Click"
                                       Width="60" Padding="2"
                                       Height="35"
                                       Margin="4,0,0,0"></ui:Button>
                        </StackPanel>
                        
                    </Grid>
                </StackPanel>
            </Expander>
        </StackPanel>
    </StackPanel>
</Expander>
</UserControl>

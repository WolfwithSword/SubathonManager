<views:SettingsControl x:Class="SubathonManager.UI.Views.SettingsViews.GoAffProSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SubathonManager.UI.Views.SettingsViews"
             xmlns:validation="clr-namespace:SubathonManager.UI.Validation"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:views="clr-namespace:SubathonManager.UI.Views">
<Expander Header="GoAffPro" IsExpanded="False">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 6">
            <ui:Button Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                       Content="Connect"
                       Click="OpenLogin_Click"
                       Padding="2"
                       Width="120"
                       Height="35"
                       x:Name="ConnectBtn"
                       VerticalAlignment="Center"
                       Margin="0,0,6,0"></ui:Button>
            <TextBlock x:Name="StatusText" Text="Disconnected" VerticalAlignment="Center" FontSize="12" Margin="14 0 0 0"/>
        </StackPanel>
        
        <Expander Header="UwUMarket" IsExpanded="False" Margin="0,5,0,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock x:Name="UMStatusText" Text="Disconnected" VerticalAlignment="Center" Width="120" FontSize="12" Margin="0 0 0 0"/>
                    <TextBlock x:Name="UMCurrency" Text="" VerticalAlignment="Center" FontSize="12" Width="60" Margin="14 0 0 0"/>
                    <CheckBox x:Name="UMEnabled" Content="Enabled" Margin="14 0 0 0"/>
                    <CheckBox x:Name="UMCommission" Content="Add commission amount as donation?" Margin="14 0 0 0"/>
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Orders:" Width="100" VerticalAlignment="Center"/>
                        <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="60"
                                    x:Name="UMSecondsBox"/>
                        <TextBlock Margin="8 0 0 0" Text="Seconds" Width="90" VerticalAlignment="Center"/>
                        <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="1"
                                    x:Name="UMPointsBox"/>
                        <TextBlock Margin="8 0 0 0"  Text="Points" Width="70" VerticalAlignment="Center"/>
                        
                        <TextBlock Text="Per: " VerticalAlignment="Center" Width="30" Margin="12 0 2 0"/>
                        <ComboBox Text="Mode" Width="120" 
                                  x:Name="UMMode"
                                  SelectedIndex="0" Margin="4 0 4 0">
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal"  HorizontalAlignment="Right">
                        <ui:TextBox Margin="10 0 4 0" Width="80" Text="29.99"
                                    PlaceholderText="1.00"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Height="34"
                                    validation:InputValidationBehavior.IsDecimalOnly="True" x:Name="UMTotalSim"/>
                        <ui:TextBox Margin="10 0 4 0" Width="80" Text="2.99"
                                    PlaceholderText="1.00"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Height="34"
                                    validation:InputValidationBehavior.IsDecimalOnly="True" x:Name="UMCommSim"/>

                        <ui:TextBox Margin="10 0 4 0" Width="80" Text="1"
                                    PlaceholderText="5"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Height="34"
                                    validation:InputValidationBehavior.IsNumberOnly="True" x:Name="UMQuantitySim"/>

                        <ui:Button Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Content="Test"
                                   Click="TestOrder_Click"
                                   x:Name="UMOrderTest"
                                   Width="60" Padding="2"
                                   Height="34"
                                   Margin="4,0,0,0"></ui:Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Expander>
        
        <Expander Header="GamerSupps" IsExpanded="False" Margin="0,5,0,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock x:Name="GSStatusText" Text="Disconnected" VerticalAlignment="Center" Width="120" FontSize="12" Margin="0 0 0 0"/>
                    <TextBlock x:Name="GSCurrency" Text="" VerticalAlignment="Center" FontSize="12" Width="60" Margin="14 0 0 0"/>
                    <CheckBox x:Name="GSEnabled" Content="Enabled" Margin="14 0 0 0"/>
                    <CheckBox x:Name="GSCommission" Content="Add commission amount as donation?" Margin="14 0 0 0"/>
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Orders:" Width="100" VerticalAlignment="Center"/>
                        <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="60"
                                    x:Name="GSSecondsBox"/>
                        <TextBlock Margin="8 0 0 0" Text="Seconds" Width="90" VerticalAlignment="Center"/>
                        <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="1"
                                    x:Name="GSPointsBox"/>
                        <TextBlock Margin="8 0 0 0"  Text="Points" Width="70" VerticalAlignment="Center"/>
                        
                        <TextBlock Text="Per: " VerticalAlignment="Center" Width="30" Margin="12 0 2 0"/>
                        <ComboBox Text="Mode" Width="120" 
                                  x:Name="GSMode"
                                  SelectedIndex="0" Margin="4 0 4 0">
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal"  HorizontalAlignment="Right">
                        <ui:TextBox Margin="10 0 4 0" Width="80" Text="29.99"
                                    PlaceholderText="1.00"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Height="34"
                                    validation:InputValidationBehavior.IsDecimalOnly="True" x:Name="GSTotalSim"/>
                        <ui:TextBox Margin="10 0 4 0" Width="80" Text="2.99"
                                    PlaceholderText="1.00"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Height="34"
                                    validation:InputValidationBehavior.IsDecimalOnly="True" x:Name="GSCommSim"/>

                        <ui:TextBox Margin="10 0 4 0" Width="80" Text="1"
                                    PlaceholderText="5"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Height="34"
                                    validation:InputValidationBehavior.IsNumberOnly="True" x:Name="GSQuantitySim"/>

                        <ui:Button Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Content="Test"
                                   Click="TestOrder_Click"
                                   x:Name="GSOrderTest"
                                   Width="60" Padding="2"
                                   Height="34"
                                   Margin="4,0,0,0"></ui:Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Expander>
    </StackPanel>
</Expander>
</views:SettingsControl>

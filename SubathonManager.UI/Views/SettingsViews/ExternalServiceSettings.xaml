<UserControl x:Class="SubathonManager.UI.Views.SettingsViews.ExternalServiceSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SubathonManager.UI.Views.SettingsViews"
             xmlns:validation="clr-namespace:SubathonManager.UI.Validation"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    
    <Expander Header="External Generic Services" IsExpanded="False">
     <StackPanel>
         <Grid Margin="0,2">
             <Grid.ColumnDefinitions>
                 <ColumnDefinition Width="*"/>
                 <ColumnDefinition Width="300"/>
             </Grid.ColumnDefinitions>

             <StackPanel Grid.Column="0" Orientation="Horizontal">
                 <TextBlock Text="External Donations:" Width="150" VerticalAlignment="Center"/>
                 <ui:TextBox Width="100" validation:InputValidationBehavior.IsNumberOnly="True" 
                             x:Name="DonoBox"/>
                 <TextBlock Margin="8 0 0 0" Text="Seconds per 1$" Width="150" VerticalAlignment="Center"/>
                 <ui:TextBox Width="100" validation:InputValidationBehavior.IsNumberOnly="True"
                             x:Name="DonoBox2"/>
                 <TextBlock Margin="8 0 0 0"  Text="Points per 1$, rounded down" Width="180" VerticalAlignment="Center"/>
             </StackPanel>

             <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                 <ui:TextBox Margin="10 0 4 0" Width="80" Text="10.00"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             PlaceholderText="100"  Height="34"
                             FontSize="12"
                             validation:InputValidationBehavior.IsNumberOnly="True" x:Name="SimulateExternalAmt"/>

                 <ComboBox Width="80" IsEditable="True" IsTextSearchEnabled="True" 
                           x:Name="CurrencyBox" StaysOpenOnEdit="True"   Height="34"
                           Margin="4 0 4 0">
                 </ComboBox>
                 <ui:Button Icon="Add24" Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Content="Test"
                            Click="TestExternalDonation_Click"
                            Width="60" Padding="2"  Height="34"
                            Margin="4,0,0,0"></ui:Button>
             </StackPanel>
         </Grid>
     </StackPanel>
 </Expander>
</UserControl>

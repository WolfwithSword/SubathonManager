<views:SettingsControl x:Class="SubathonManager.UI.Views.SettingsViews.ChatExtensionSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SubathonManager.UI.Views.SettingsViews"
             xmlns:validation="clr-namespace:SubathonManager.UI.Validation"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:views="clr-namespace:SubathonManager.UI.Views">
    <Expander Header="Chat Extensions" IsExpanded="False">
        <!-- Blerp -->
        <Expander Header="Blerp"
                  IsExpanded="True" Margin="0,5,0,0">
            <StackPanel Margin="10,5,0,5">
                <TextBlock Margin="0 -2 0 5">Twitch + YouTube. Requires Blerp Chat Notifications</TextBlock>
                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Bits:" Width="80" VerticalAlignment="Center" ToolTip="Twitch Only"/>
                        <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="12"
                                    x:Name="BitsTextBox"/>
                        <TextBlock Margin="8 0 0 0" Text="Seconds/100" Width="110" VerticalAlignment="Center"/>
                    
                        <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="0"
                                    x:Name="Bits2TextBox"/>
                        <TextBlock Margin="8 0 0 0"  Text="Points/100" ToolTip="Rounded down" Width="140" VerticalAlignment="Center"/>
                        <ui:TextBox Width="70" validation:InputValidationBehavior.IsDecimalOnly="True" Text="1" PlaceholderText="0.80"
                                    x:Name="BitsModifierTextBox" Margin="8 0"/>
                        <TextBlock Text="Donation Modifier" Width="150" VerticalAlignment="Center" ToolTip="Only when counting as donations, what modifier to count it as? 0.8 = 80%"/>
                        
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Beets:" Width="80" VerticalAlignment="Center"/>
                        <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="12"
                                    x:Name="BeetsTextBox"/>
                        <TextBlock Margin="8 0 0 0" Text="Seconds/100" Width="110" VerticalAlignment="Center"/>
                    
                        <ui:TextBox Width="100" validation:InputValidationBehavior.IsDecimalOnly="True" PlaceholderText="0"
                                    x:Name="Beets2TextBox"/>
                        <TextBlock Margin="8 0 0 0"  Text="Points/100" ToolTip="Rounded down" Width="140" VerticalAlignment="Center"/>
                        <ui:TextBox Width="70" validation:InputValidationBehavior.IsDecimalOnly="True" Text="1" PlaceholderText="0.8"
                                    x:Name="BeetsModifierTextBox" Margin="8 0"/>
                        <TextBlock Text="Donation Modifier" Width="150" VerticalAlignment="Center" ToolTip="Only when counting as donations, what modifier to count it as? 0.8 = 80%"/>
                        
                    </StackPanel>
                
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <ui:TextBox Margin="10 0 4 0" Width="80" Text="100"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    PlaceholderText="100"
                                    Height="34"
                                    FontSize="12"
                                    validation:InputValidationBehavior.IsNumberOnly="True" x:Name="SimulateBlerpAmt"/>
                        <ComboBox Width="100" IsEditable="True" IsTextSearchEnabled="True" 
                                  x:Name="BlerpCurrencyBox" StaysOpenOnEdit="True" Height="34"
                                  ToolTip="Blerp Bits or Beets"
                                  Margin="4 0 4 0" SelectedIndex="0">
                            <ComboBoxItem Content="bits"></ComboBoxItem>
                            <ComboBoxItem Content="beets"></ComboBoxItem>
                        </ComboBox>
                        <ui:Button Icon="Add24" Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Content="Test"
                                   Click="TestBlerp_Click"
                                   Width="60" Padding="2"
                                   Height="34"
                                   Margin="4,0,0,0"></ui:Button>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </Expander>
    </Expander>

</views:SettingsControl>